<% if params[:column_full] %>
<div class="column is-full">
<% else %>
<div class="column is-one-third">
<% end %>
  <div class="card">
    <div class="card-content">
      <p class="title"><%= link_to foodgroup.name, foodgroup %></p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">Suggested Daily Serving: <%= foodgroup.suggested_serving %></p>
    </footer>
  </div>
</div>
<% if params[:column_full] %>
<div class="column is-full">
<% else %>
<div class="column is-one-third">
<% end %>
  <div class="card">
    <div class="card-content">
      <p class="title"><%= link_to recipe.name, recipe %></p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        <span class="has-text-weight-semibold"><%= recipe.description %></span>
      </p>
    </footer>
  </div>
</div>